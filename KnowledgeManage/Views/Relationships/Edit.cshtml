@model KnowledgeManage.Models.Relationship

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container bg-light" >
    <h1>Edit</h1>

    <h4>Relationship</h4>
