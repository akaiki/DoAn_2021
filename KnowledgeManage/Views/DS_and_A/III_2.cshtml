int main(){
    int *a, *b;
    
    //Khoi tao
    a = NULL;
    b = NULL;
    
    //Cap phat bo nho
    a = (int *)malloc(sizeof(int *));
    b = (int *)malloc(sizeof(int *));
    
    printf("Nhap vao a= ");
    scanf("%d", a); // a đã là con trỏ nên ko cần dấu & nữa
    
    printf("Nhap vao b = ");
    scanf("%d", b);
    
    
    //Tim Min
    printf("\nMin = %d", *a < *b ? *a : *b);
    //Tim Max
    printf("\nMax = %d", *a > *b ? *a : *b);
    
    //Giai phong con tro 
    free(a);
    free(b);
    
    return 0;
}

