	int n =0;
	int *p = NULL;

	printf("Nhap so phan tu:");
	scanf ("%d", &n);

	//Cap phat bo nho
	p = (int *)  malloc(n*sizeof(int));

	//Kiem tra cap phat thanh cong
	if (!p) {
		printf("Loi!!");
		exit(1);
    }
    for(int i=0; i < n; i++){
    	printf("Nhap phan tu thu %d: ", i + 1);
    	scanf("%d", p + i);
    }
    printf("Mang da nhap la: [");
    for (int i=0; i< n; i++){
        printf((i == n-1) ? "%d]\n" : "%d  " , *(p + i));
    }
    free(p); //Giai phong bo nho
    
    return 0;
}

