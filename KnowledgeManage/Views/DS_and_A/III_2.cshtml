#include &lt; stdlib.h &gt; 
#include &lt; string.h &gt;
int main(){
	char *str;
	
	//cap phat bo nho
	if (!(str = (char *) calloc(10, sizeof(char))))
	{
	    printf("Loi!!!");
	    exit(1);
	}
	
	strcpy(str, "trungkien");
	printf("Chuoi ban dau: %s\n", str);
	
	//load cap phat bo nho
	if(!(str = (char *) realloc(str, 15)))
	{
	    printf("Loi!!!");
	    exit(1);
	}
	strcat(str, "101");
	printf("Chuoi sau: %s\n", str);
	
	free(str);
	
    return (0);

}
