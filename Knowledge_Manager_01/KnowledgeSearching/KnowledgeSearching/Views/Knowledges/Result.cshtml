@model IEnumerable<KnowledgeSearching.Models.Knowledge>

@{
    ViewData["Title"] = "Result";
}

<div class="container">
    <div class="row">
        <div class="col-6" style="float: left"><h1>Result</h1>
        <br />
        <a asp-controller="Knowledges" asp-action="Search" class="btn btn-primary col-6">Back to search</a></div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <a class="btn btn-info col-12" href="@item.Link">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <br />
        <br />
        <p style="text-align:center">
            <b>KHÔNG THẤY KẾT QUẢ TÌM KIẾM CHO "@ViewData["ss"]"!!!!</b>
        </p>
    }

</div>