@model IEnumerable<KnowledgeSearching.Models.Knowledge>

@{
    ViewData["Title"] = "Index";
}

@{
    Model.OrderByDescending(k => k.ID);
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a class="btn btn-success col-3" asp-action="Create">Create New</a>
    </p>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SearchResult_toIndex_ByTitle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="searchString" class="control-label">Tìm kiếm theo Title</label>
                    <input name="searchString" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary col-12" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <form asp-action="SearchResult_toIndex_ByID">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="searchString" class="control-label">Tìm kiếm theo ID</label>
                    <input name="searchString" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary col-12" />
                </div>
            </form>
        </div>
    </div>
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KeyWords)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KeyWords)
                        </td>
                        <td>
                            <a class="btn btn-link col-12" href="@item.Link">@item.Link</a>
                        </td>
                        <td>
                            <a class="btn btn-success col-12" asp-action="Edit" asp-route-id="@item.ID">Edit </a> <br /><br />
                            <a class="btn btn-info col-12" asp-action="Details" asp-route-id="@item.ID">Details</a> <br /><br />
                            <a class="btn btn-danger col-12" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            <b>KHÔNG TÌM THẤY KẾT QUẢ TÌM KIẾM CHO "@ViewData["ss"]"!!!</b>
        </p>
    }

</div>