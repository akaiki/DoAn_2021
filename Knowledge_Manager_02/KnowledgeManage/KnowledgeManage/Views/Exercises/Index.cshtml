@model IEnumerable<KnowledgeManage.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<div  class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Exercise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link_Exercise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_Exercise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Lesson)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Exercise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link_Exercise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_Exercise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Lesson)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_Exercise">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_Exercise">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_Exercise">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
