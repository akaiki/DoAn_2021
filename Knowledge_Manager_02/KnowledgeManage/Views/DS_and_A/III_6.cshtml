<code>
int GetRangeNodeNum(Tree T, int x, int y){
    int n = 0;
    if (T == NULL)
        return 0;
    if (T -> key < x) 
        n = GetRangeNodeNum(T -> pRight, x, y);
    else{
        if (T -> key > y)
            n = GetRangeNodeNum(T -> pLeft, x, y);
        else{
            if ((T -> key != x) && (T -> key != y))
                n = 1;
            n = n + GetRangeNodeNum(T -> pLeft, x, y) + GetRangeNodeNum(T -> pRight, x, y);
        }
    }
    return n;
}
