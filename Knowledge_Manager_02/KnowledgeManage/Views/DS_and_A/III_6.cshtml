int GetLeafNum(Tree T){
    int n = 0;
    if (T == NULL)
        return 0;
    if((T -> pLeft == NULL) && (T -> pRight == NULL))
        return 1;
    if (T -> pLeft)
        n = GetLeafNum(T -> pLeft);
    if (T -> pRight)
        n = n + GetLeafNum(T -> pRight);
    return n;
}
